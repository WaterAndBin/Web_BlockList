{
  "manifest_version": 3,
  "name": "Web_BlockList",
  "version": "0.1",
  "description": "网站黑名单，防止加载、搜索",
  "permissions": ["storage", "scripting"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./content/content.js"],
      "type": "module"
    }
  ],
  "action": {
    "default_popup": "./popup/popup.html"
  },
  "background": {
    "scripts": ["./hot-reload.js"],
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": ["./tools/utils.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
